@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Spokinsa's Portal</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" />

</head>
<body>
    <div class="login-page">
        <div class="form" action="/Account/Login/OnPostAsync" >
            <form class="login-form">
                <div class="imgContainer">
                    <img src="images/spokinsa.png" alt="Logo" class="avatar" />
                </div>
                <div class="container">
                    <label>Usuario</label>
                    <input id="txtUsuario" type="text" placeholder="Nombre de Usuario" />
                    <label>Contraseña</label>
                    <input id="txtClave" type="password" placeholder="Contraseña" />
                    <button type="button" id="btnEntrar" class="btn-success">Ingresar</button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/js/Login.js"></script>

</body>
</html>